{%- liquid
  assign collection_handle = section.settings.collection | default: 'all'
  assign per_page = section.settings.products_per_page | default: 12
-%}

<!-- Section: Infinite product feed (2-col grid) -->
<div class="abhinaya-feed" id="abhinayaFeed">
  <div class="abhinaya-feed__grid" id="abhinayaFeedGrid">
    {%- for product in collections[collection_handle].products limit: per_page -%}
      {% render 'abhinaya-card', card_product: product %}
    {%- else -%}
      <!-- Empty state -->
      <div class="abhinaya-feed__empty">
        <p>No products found</p>
      </div>
    {%- endfor -%}
  </div>

  <!-- Loading / skeleton states -->
  <div class="abhinaya-feed__loader" id="abhinayaFeedLoader" hidden>
    <div class="abhinaya-feed__grid">
      {%- for i in (1..4) -%}
        <div class="abhinaya-card abhinaya-card--skeleton">
          <div class="abhinaya-card__img-wrap abhinaya-skeleton"></div>
          <div class="abhinaya-card__info">
            <div class="abhinaya-skeleton abhinaya-skeleton--text" style="width:80%"></div>
            <div class="abhinaya-skeleton abhinaya-skeleton--text" style="width:50%"></div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>

  <!-- Error state -->
  <div class="abhinaya-feed__error" id="abhinayaFeedError" hidden>
    <p>Couldn't load more products.</p>
    <button class="abhinaya-feed__retry" id="abhinayaFeedRetry">Retry</button>
  </div>
</div>

<style>
  .abhinaya-feed {
    padding: 8px 16px 32px;
  }
  .abhinaya-feed__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 12px;
  }
  .abhinaya-feed__empty {
    grid-column: 1 / -1;
    text-align: center;
    padding: 48px 16px;
    color: #888;
    font-size: 15px;
  }

  /* === PRODUCT CARD === */
  .abhinaya-card {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: #1a1a2e;
    border-radius: 12px;
    overflow: hidden;
    background: #fff;
    transition: transform 0.15s;
  }
  .abhinaya-card:active {
    transform: scale(0.98);
  }
  .abhinaya-card__img-wrap {
    position: relative;
    aspect-ratio: 3 / 4;
    background: #f5f5f5;
    border-radius: 12px;
    overflow: hidden;
  }
  .abhinaya-card__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  .abhinaya-card__img-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f0f0f0;
  }
  .abhinaya-card__discount {
    position: absolute;
    top: 8px;
    left: 8px;
    background: #e63946;
    color: #fff;
    font-size: 11px;
    font-weight: 700;
    padding: 3px 8px;
    border-radius: 6px;
    line-height: 1.2;
  }
  .abhinaya-card__sold-out {
    position: absolute;
    top: 8px;
    left: 8px;
    background: rgba(0,0,0,0.7);
    color: #fff;
    font-size: 11px;
    font-weight: 600;
    padding: 3px 8px;
    border-radius: 6px;
  }
  .abhinaya-card__info {
    padding: 10px 4px 8px;
  }
  .abhinaya-card__title {
    font-size: 13px;
    font-weight: 500;
    margin: 0 0 4px;
    line-height: 1.35;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .abhinaya-card__price-row {
    display: flex;
    align-items: baseline;
    gap: 6px;
    flex-wrap: wrap;
  }
  .abhinaya-card__price {
    font-size: 15px;
    font-weight: 700;
    color: #1a1a2e;
  }
  .abhinaya-card__mrp {
    font-size: 12px;
    color: #999;
    text-decoration: line-through;
  }
  .abhinaya-card__tag {
    display: inline-block;
    margin-top: 4px;
    font-size: 10px;
    font-weight: 600;
    color: #2d8f4e;
    background: #eaf7ee;
    padding: 2px 6px;
    border-radius: 4px;
  }

  /* === SKELETON LOADING === */
  .abhinaya-skeleton {
    background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
    background-size: 200% 100%;
    animation: abhinaya-shimmer 1.5s infinite;
    border-radius: 8px;
  }
  .abhinaya-skeleton--text {
    height: 14px;
    margin-bottom: 8px;
    border-radius: 4px;
  }
  .abhinaya-card--skeleton .abhinaya-card__img-wrap {
    background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
    background-size: 200% 100%;
    animation: abhinaya-shimmer 1.5s infinite;
  }
  @keyframes abhinaya-shimmer {
    0% { background-position: 200% 0; }
    100% { background-position: -200% 0; }
  }

  /* === ERROR / RETRY === */
  .abhinaya-feed__error {
    text-align: center;
    padding: 24px 16px;
    color: #888;
    font-size: 14px;
  }
  .abhinaya-feed__retry {
    margin-top: 8px;
    padding: 10px 24px;
    border: 1.5px solid #1a1a2e;
    border-radius: 8px;
    background: #fff;
    font-size: 14px;
    font-weight: 600;
    color: #1a1a2e;
    cursor: pointer;
    min-height: 44px;
  }

  /* Desktop: wider grid */
  @media (min-width: 750px) {
    .abhinaya-feed__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 16px;
    }
  }
  @media (min-width: 990px) {
    .abhinaya-feed__grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 20px;
    }
  }
</style>

{% schema %}
{
  "name": "Product Feed",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_per_page",
      "label": "Products per page",
      "min": 4,
      "max": 24,
      "step": 2,
      "default": 12
    }
  ],
  "presets": [
    {
      "name": "Product Feed"
    }
  ]
}
{% endschema %}
